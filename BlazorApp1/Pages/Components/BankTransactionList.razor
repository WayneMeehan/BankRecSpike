@if (Transactions.Any())
{
    <div class="mdc-data-table">
        <table class="mdc-data-table__table">
            <thead>
                <tr class="mdc-data-table__header-row">
                    <th class="mdc-data-table__header-cell"></th>
                    <th class="mdc-data-table__header-cell">Id</th>
                    <th class="mdc-data-table__header-cell">Date</th>
                    <th class="mdc-data-table__header-cell">Description</th>
                    <th class="mdc-data-table__header-cell">Reference</th>
                    <th class="mdc-data-table__header-cell mdc-data-table__header-cell--numeric">Amount</th>
                </tr>
            </thead>
            <tbody class="mdc-data-table__content">
                @foreach (var transaction in Transactions.OrderBy(x => x.IsReconciled).ThenBy(x => x.Id))
                {
                        <BankTransaction TransactionData="transaction" ViewModel="ViewModel" />
                 }
                </tbody>
        </table>
    </div>
}


@code {
    [Parameter]
    public IEnumerable<BlazorApp1.Models.Transaction> Transactions { get; set; }

    [Parameter]
    public BlazorApp1.Models.ReconcileViewModel ViewModel { get; set; }


}
